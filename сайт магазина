<script>
    // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ —Ç–æ–≤–∞—Ä–∞ –ø—Ä–∏ –∫–ª–∏–∫–µ –Ω–∞ –∫–Ω–æ–ø–∫—É "–ó–∞–∫–∞–∑–∞—Ç—å"
    function setProduct(name, price) {
        document.getElementById('product').value = name;
    }

    // –û—Ç–ø—Ä–∞–≤–∫–∞ –∑–∞–∫–∞–∑–∞ –≤ Telegram
    async function sendToTelegram(data) {
        const botToken = '7754017118:AAF8inVsWtgjR46_J7GVVhgL6IcjMurVnpI';
        const chatId = '5299337854';

        const text = `–ù–æ–≤—ã–π –∑–∞–∫–∞–∑!\n–ò–º—è: ${data.name}\n–¢–µ–ª–µ—Ñ–æ–Ω: ${data.phone}\n–¢–æ–≤–∞—Ä: ${data.product}\n–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π: ${data.message || '–Ω–µ—Ç'}`;

        try {
            const response = await fetch(`https://api.telegram.org/bot${botToken}/sendMessage`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    chat_id: chatId,
                    text: text
                })
            });

            return await response.json();
        } catch (error) {
            console.error('–û—à–∏–±–∫–∞:', error);
            return false;
        }
    }

    // –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ñ–æ—Ä–º—ã
    document.getElementById('orderForm').addEventListener('submit', async function(e) {
        e.preventDefault();

        const formData = {
            name: document.getElementById('name').value,
            phone: document.getElementById('phone').value,
            product: document.getElementById('product').value,
            message: document.getElementById('message').value
        };

        const result = await sendToTelegram(formData);

        if (result.ok) {
            document.getElementById('alert').style.display = 'block';
            this.reset();

            setTimeout(() => {
                document.getElementById('alert').style.display = 'none';
            }, 3000);
        } else {
            alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ –∑–∞–∫–∞–∑–∞. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–æ–∑–∂–µ.');
        }
    });
</script>
